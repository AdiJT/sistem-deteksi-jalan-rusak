@using DeteksiJalanRusak.Web.Controllers
@using DeteksiJalanRusak.Web.Extensions
@using DeteksiJalanRusak.Web.Models.Home
@using Humanizer
@using SkiaSharp
@using YoloDotNet.Extensions
@model IndexVM

@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="col-12">
        <form asp-action="Index" enctype="multipart/form-data">
            <div class="row mb-3">
                <label asp-for="@Model.FormFile" class="form-label"></label>
                <input asp-for="@Model.FormFile" class="form-control" />
                <span asp-validation-for="@Model.FormFile" class="text-danger"></span>
            </div>

            <div class="row mb-3">
                <label asp-for="@Model.LuasSampel" class="form-label"></label>
                <input asp-for="@Model.LuasSampel" class="form-control" />
                <span asp-validation-for="@Model.LuasSampel" class="text-danger"></span>
            </div>

            <button type="submit">Upload</button>
        </form>
    </div>
    @if (Model.ResultVM is not null)
    {
        <div class="col-12">
            <p>File name : @Model.ResultVM.FileName</p>
            <p>Ukuran : @Model.ResultVM.Lebar x @Model.ResultVM.Tinggi Pixel</p>
            <p>Dimensi Kertas (m) : @HomeController.PANJANG_KERTASA4_M x @HomeController.LEBAR_KERTASA4_M</p>
            <p>Luas Kertas (m<sup>2</sup>) : @HomeController.LUAS_KERTASA4_M2 </p>

            <div class="row">
                @if (Model.ResultVM.Kertas is not null)
                {
                    <div class="col-12">
                        <h3>Ukuran Kertas Terukur</h3>
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Luas</th>
                                    <th>Luas Persegi</th>
                                    <th>Panjang</th>
                                    <th>Lebar</th>
                                    <th>Ukuran</th>
                                    <th>Mask</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>@Model.ResultVM.Kertas.Luas.ToString("F5") m<sup>2</sup></td>
                                    <td>@Model.ResultVM.Kertas.LuasPersegi.ToString("F5") m<sup>2</sup></td>
                                    <td>@Model.ResultVM.Kertas.Panjang.ToString("F5") m</td>
                                    <td>@Model.ResultVM.Kertas.Lebar.ToString("F5") m</td>
                                    <td>@Model.ResultVM.Kertas.Segmentation.BoundingBox.Width x @Model.ResultVM.Kertas.Segmentation.BoundingBox.Height Pixel</td>
                                    <td><img height="100" style="background-color:black" src="@Model.ResultVM.Kertas.MaskBase64" /></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="col-12">
                        <h3>Daftar Kerusakan</h3>
                        <p>m<sup>2</sup>/Pixel : @Model.ResultVM.M2PerPiksel.ToString("F20")</p>
                        <p>m/Pixel : @Model.ResultVM.MPerPiksel.ToString("F5")</p>
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Kerusakan</th>
                                    <th>Luas</th>
                                    <th>Luas Persegi</th>
                                    <th>Panjang</th>
                                    <th>Lebar</th>
                                    <th>Kondisi</th>
                                    <th>Distress Density</th>
                                    <th>DV</th>
                                    <th>Ukuran</th>
                                    <th>Mask</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var kerusakan in Model.ResultVM.Results)
                                {
                                    <tr>
                                        <td>@kerusakan.Label.Humanize()</td>
                                        <td>@kerusakan.Luas.ToString("F5") m<sup>2</sup></td>
                                        <td>@kerusakan.LuasPersegi.ToString("F5") m<sup>2</sup></td>
                                        <td>@kerusakan.Panjang.ToString("F5") m</td>
                                        <td>@kerusakan.Lebar.ToString("F5") m</td>
                                        <td>@kerusakan.Kondisi</td>
                                        <td>@kerusakan.DistressDensity.ToString("F5") %</td>
                                        <td>@kerusakan.DeductValue.ToString("F5")</td>
                                        <td>@kerusakan.Segmentation.BoundingBox.Width x @kerusakan.Segmentation.BoundingBox.Height Pixel</td>
                                        <td>
                                            <img style="background-color:black" class="img-fluid" src="@kerusakan.MaskBase64" />
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }

                <div class="col-12">
                    <img class="img-fluid" src="@Model.ResultVM.ImageBase64" />
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
