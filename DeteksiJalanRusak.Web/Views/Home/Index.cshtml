@model List<Analisis>

<div class="card card-primary">
    <div class="card-body">
        <a asp-action="Tambah" asp-controller="Analisis" class="btn btn-primary">Buat Analisis Baru</a>

        <div class="table-responsive">
            <table class="table table-striped table-hover" id="table-akun1">
                <thead>
                    <tr>
                        <th>Nama</th>
                        <th>Pembuat</th>
                        <th>Lokasi</th>
                        <th>Aksi</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var analisis in Model)
                    {
                        <tr>
                            <td>@analisis.Nama</td>
                            <td>@analisis.Pembuat</td>
                            <td>@analisis.Lokasi</td>
                            <td>
                                <a class="btn btn-icon icon-left btn-warning" asp-action="Detail" asp-route-id="@analisis.Id"><i class="fas fa-eye"></i> Detail</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
