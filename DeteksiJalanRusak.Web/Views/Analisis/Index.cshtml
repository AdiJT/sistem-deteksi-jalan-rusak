@model List<Analisis>

<div class="card card-primary">
@*     <div class="card-header">

    </div> *@

    <div class="card-body">
        <a asp-action="Tambah" class="btn btn-primary">Buat Analisis Baru</a>

        <div class="table-responsive">
            <table class="table table-striped table-hover" id="table-akunn">
                <thead>
                    <tr>
                        <th>Nama</th>
                        <th>Pembuat</th>
                        <th>Lokasi</th>
                        <th>Aksi</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var analisis in Model)
                    {
                        <tr>
                            <td>@analisis.Nama</td>
                            <td>@analisis.Pembuat</td>
                            <td>@analisis.Lokasi</td>
                            <td>
                                <a class="btn btn-icon icon-left btn-warning" asp-action="Detail" asp-route-id="@analisis.Id"><i class="fas fa-eye"></i> Detail</a>
                                <a class="btn btn-icon icon-left btn-primary" asp-action="Edit" asp-controller="Analisis" asp-route-id="@analisis.Id"><i class="fas fa-pencil-alt"></i> Edit</a>

                                <form asp-action="Hapus" asp-route-id="@analisis.Id" style="display:inline">
                                    <button class="btn btn-icon icon-left btn-danger" type="submit"><i class="fas fa-trash"></i> Hapus</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>        
    </div>
</div>

